{
    "name": "distrack",
    "displayName": "DisTrack | Discord VSCode Tracker",
    "description": "This will track your time in VSCode. Add the bot to your server to check your progress!",
    "version": "0.9.6",
    "publisher": "JayNightmare",
    "author": {
        "name": "Jay",
        "email": "jn3.enquiries@gmail.com"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "icon": "images/distrack.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/JayNightmare/DisTrack-VSCode-Extension"
    },
    "categories": [
        "Other"
    ],
    "bugs": {
        "url": "https://github.com/JayNightmare/DisTrack-VSCode-Extension/issues"
    },
    "keywords": [
        "discord",
        "vscode",
        "rich",
        "presence",
        "rich presence",
        "rpc",
        "time tracking",
        "development",
        "tracker",
        "leaderboard",
        "discord leaderboard"
    ],
    "homepage": "https://github.com/JayNightmare/DisTrack-VSCode-Extension#readme",
    "activationEvents": [
        "onStartupFinished",
        "onCommand:extension.updateDiscordId",
        "onView:discordCodingPanel"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "discordCodingContainer",
                    "title": "DisTrack",
                    "icon": "images/D.png"
                }
            ]
        },
        "views": {
            "discordCodingContainer": [
                {
                    "id": "discordCodingPanel",
                    "name": "Leaderboard",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.updateDiscordId",
                "title": "Link Discord Account",
                "category": "DisTrack"
            },
            {
                "command": "extension.reconnectDiscord",
                "title": "Reconnect Discord",
                "category": "DisTrack"
            },
            {
                "command": "extension.refreshRPC",
                "title": "Refresh Discord RPC",
                "category": "DisTrack"
            },
            {
                "command": "extension.refreshPanel",
                "title": "Refresh Leaderboard",
                "category": "DisTrack"
            }
        ],
        "configuration": {
            "title": "DisTrack Settings",
            "properties": {
                "extension.updateDiscordId": {
                    "type": "string",
                    "default": "",
                    "description": "Enter your Discord User ID to link it with the extension."
                },
                "extension.enableRichPresence": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable Rich Presence integration."
                },
                "extension.sessionTimerFormat": {
                    "type": "string",
                    "enum": [
                        "hh:mm:ss",
                        "mm:ss",
                        "hours"
                    ],
                    "default": "hh:mm:ss",
                    "description": "Choose the format for the session timer display."
                },
                "extension.languageDetectionDelay": {
                    "type": "number",
                    "default": 500,
                    "minimum": 100,
                    "maximum": 5000,
                    "description": "Delay in milliseconds before detecting language changes (prevents excessive updates)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/discord-rpc": "^4.0.8",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.13.4",
        "@types/uuid": "^10.0.0",
        "@types/vscode": "^1.96.2",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.24.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.6.0",
        "dotenv-webpack": "^8.1.0",
        "eslint": "^9.20.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.3",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "discord-rpc": "^4.0.1",
        "dotenv": "^16.4.7",
        "moment": "^2.30.1",
        "uuid": "^13.0.0"
    }
}
